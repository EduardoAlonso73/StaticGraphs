	cout<<"          |_______|_______|_________________|\n";
	
	
	cout<<"\n";
	cout<<"                      -60-5x  \n";
	cout<<"                   y= ------\n";
	cout<<"                         8   \n";
	cout<<"\n";
	
	cout<<"           __________________________________\n";
	cout<<"          |   X   |  Y    |     PUNTOS      |\n";
