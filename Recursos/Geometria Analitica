void Ecuaciones:: calcular2(){
		//setbkcolor(3);
	//cleardevice();
	int t1,t2,m,m2,r,g,p,c,w,j,f,z,x,y,t;
	cout<<a1<<"x"<<b1<<"="<<c1<<"\n";
	cout<<a2<<"x"<<"+"<<b2<<"="<<c2<<"\n";
		cout<<"\n";
	cout<<"\n";
		cout<<"\n";
