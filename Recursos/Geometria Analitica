	cout<<"          |  -6   | -3.7  | F(-6,-3.7)      |\n";
	cout<<"          |_______|_______|_________________|\n";
	
	
	
	
	
	
	
	
	t1=a2*(c1);
	t2=a2*(b1);
		
	
	m=a1*(c2);
	m2=a1*(b2);
	
	r=-1*(m2);
	g=-1*(t1);
	
	p=-1*(t2+1*(r));
	c=m+1*(g);
	
	w=c/p;
	
	j=b1*(w);
	f=-1*(j);
	
	z=c1+1*(f);
	t=z/a1;
		
	
	cout<<"                 __________________________\n";
	cout<<"                |                         |\n";
	cout<<"                |    Valor de x ="<<t<<"  |\n";
	cout<<"                |                         |\n";
	cout<<"                |    Valor de y ="<<w<<"  |\n";
	cout<<"                |_________________________|\n";
	
	
